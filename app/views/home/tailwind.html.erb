<div>
<h1>Tailwind</h1>
<%= form_with model: User.new, builder: TailwindFormBuilder do |form| %>
  <div class="stack">
    <%= form.text_field :name, required: true %>
    <%= form.number_field :age, required: true %>
    <%= form.url_field :website, required: true %>
    <%= form.password_field :password, required: true %>

    <%= form.label :active, class: "flex justify-between" do %>
      Active?
      <%= form.check_box :active %>
    <% end %>

    <%= form.label :onboarded, class: "flex justify-between" do %>
      Onboarded?
      <%= form.check_box :onboarded %>
    <% end %>

    <%= form.button "Submit" %>
  </div>
<% end %>
</div>