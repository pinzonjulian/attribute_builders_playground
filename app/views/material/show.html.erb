
<div class="md:grid grid-cols-7 md:h-full">

  <div class="overflow-y-scroll p-8 col-span-2">
    <h1 class="font-bold text-2xl">Material Web Components</h1>
    <div class="mt-4">
      <%= render 'material/form', user: @user %>
    </div>
  </div>

  <div class="flex flex-col h-full col-span-3 h-full overflow-scroll">

    <div class="bg-[#272822] sm:border-b-4 md:border-r-4 border-neutral-700 overflow-scroll h-full"
         data-controller="tabs"
         data-tabs-visibility-class="hidden"
         data-tabs-open-class="border-b-neutral-600"
         data-tabs-closed-class="border-b-transparent"
         data-tabs-open-value="code">
      <nav class="flex bg-[#272822] text-white">
        <button class="px-4 pb-1 pt-3 border-b-transparent border-b-4"
                data-tabs-target="tab"
                data-action="tabs#open"
                data-content="code">Code</button>
        <button class="px-4 pb-1 pt-3 border-b-transparent border-b-4"
                data-tabs-target="tab"
                data-action="tabs#open"
                data-content="html">HTML</button>
        <button class="px-4 pb-1 pt-3 border-b-transparent border-b-4"
                data-tabs-target="tab"
                data-action="tabs#open"
                data-content="builder">Builder</button>
      </nav>
      <div class="hidden" data-tabs-target="content" id="code"><%= render 'code' %></div>
      <div class="hidden" data-tabs-target="content" id="html"><%= render 'html' %></div>
      <div class="hidden" data-tabs-target="content" id="builder"><%= render 'builder' %></div>
    </div>

  </div>
  <div class="bg-[#272822] overflow-scroll col-span-2">
    <h2 class="text-neutral-200 bold text-lg pt-3 px-2">Params</h2>
    <div id="json"></div>
  </div>

</div>